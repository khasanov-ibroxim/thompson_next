# .htaccess - Place in public_html root

# Enable RewriteEngine
RewriteEngine On

# Force HTTPS (optional but recommended)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirect root to /ru/
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^$ /ru/ [R=301,L]

# Redirect root index.html to /ru/
RewriteCond %{REQUEST_URI} ^/index\.html$
RewriteRule ^index\.html$ /ru/ [R=301,L]

# Remove trailing .html from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html [L]

# Handle missing trailing slashes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !(.*)/$
RewriteRule ^(.*)$ $1/ [L,R=301]

# Fallback for 404 errors
ErrorDocument 404 /ru/404/index.html